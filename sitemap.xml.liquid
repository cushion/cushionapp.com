<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ site.permalink }}</loc>
    <lastmod>{{ site.updated_at | date:"%FT%T%:z" }}</lastmod>
    <priority>1.0</priority>
  </url>
  {% for page in site.pages %}
  {% if page.meta.sitemap? %}
  <url>
    <loc>{{ page.permalink }}</loc>
    {% if page.posts.length > 0 %}
      {% assign updated_at = page.posts.first.updated_at %}
    {% else %}
      {% assign updated_at = page.updated_at %}
    {% endif %}
    <lastmod>{{ updated_at | date:"%FT%T%:z" }}</lastmod>
    <priority>1.0</priority>
  </url>
  {% endif %}
  {% for subpage in page.pages %}
  {% if subpage.meta.sitemap? %}
  <url>
    <loc>{{ subpage.permalink }}</loc>
    <lastmod>{{ subpage.updated_at | date:"%FT%T%:z" }}</lastmod>
    <priority>0.5</priority>
  </url>
  {% endif %}
  {% endfor %}
  {% endfor %}
</urlset>
